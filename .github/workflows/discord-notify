name: Discord Notification (with curl)

on:
  push:
    branches:
      - '**'

jobs:
  notify:
    runs-on: ubuntu-latest
    steps:
      - name: Send Discord Notification via curl
        run: |
          curl -X POST -H "Content-Type: application/json" \
          -d "{\"content\": \"ðŸš€ Repo: ${{ github.repository }}\nâœ… ${{ github.actor }} pushed to **${{ github.ref_name }}**\nðŸ’¬ Commit: ${{ github.event.head_commit.message }}\nðŸ”— https://github.com/${{ github.repository }}/commit/${{ github.sha }}\"}" \
          ${{ secrets.DISCORD_WEBHOOK }}
